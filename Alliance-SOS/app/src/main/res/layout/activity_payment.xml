<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_back"
    android:padding="10dp"
    tools:context=".Payment.PaymentActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layoutDirection="ltr"
        android:onClick="goBackPayment"
        android:src="@drawable/back_vector"
        app:tint="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Charge Account"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/ask_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:text="Which One Do you Prefer ?"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ask_payment"
        android:checkedButton="@id/radio_1month"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_1month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:buttonTint="@color/gray"
            android:text="1 Month "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic"
            app:useMaterialThemeColors="true" />

        <RadioButton
            android:id="@+id/radio_6month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:buttonTint="@color/gray"
            android:text="6 Months "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic"
            app:useMaterialThemeColors="true" />

        <RadioButton
            android:id="@+id/radio_12month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:buttonTint="@color/gray"
            android:text="12 Months "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic"
            app:useMaterialThemeColors="true" />

        <RadioButton
            android:id="@+id/radio_24month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/gray"
            android:text="24 Months "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic"
            app:useMaterialThemeColors="true" />

    </RadioGroup>

    <TextView
        android:id="@+id/more_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:onClick="moreOptionPayment"
        android:padding="10dp"
        android:text="more Options ?"
        android:textColor="#2C2C2C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_option"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_sign_up_back"
        android:onClick="PayOff"
        android:padding="20dp"
        android:text="Pay off"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>