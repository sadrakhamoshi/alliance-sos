<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_back"
    android:padding="10dp"
    tools:context=".Payment.PaymentActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:onClick="goBackPayment"
        android:src="@drawable/back_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Charge Account"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ask_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Which One Do you Prefer ?"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_which"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/radio_6month"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_1month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/gray"
                android:text="1 Month "
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="italic"
                app:useMaterialThemeColors="true" />

            <RadioButton
                android:id="@+id/radio_6month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/gray"
                android:text="6 Months (recommended)"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="italic"
                app:useMaterialThemeColors="true" />

            <RadioButton
                android:id="@+id/radio_12month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/gray"
                android:text="12 Months "
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="italic"
                app:useMaterialThemeColors="true" />

            <RadioButton
                android:id="@+id/radio_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/gray"
                android:text="Other Options "
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="italic"
                app:useMaterialThemeColors="true" />

        </RadioGroup>

        <TextView
            android:id="@+id/more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:onClick="moreOptionPayment"
            android:text="For Whom ?"
            android:textColor="#393333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_whom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/myself_radio"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/myself_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="For My Self"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/other_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="For Other Person"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />
        </RadioGroup>


        <EditText
            android:id="@+id/email_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_sign_up_back"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:hint="@string/email_hint"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_sign_up_back"
        android:drawableLeft="@drawable/payment_icon"
        android:drawablePadding="15dp"
        android:onClick="PayOff"
        android:padding="20dp"
        android:text="Pay off"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progress_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>