<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100F0F"
    android:layoutDirection="ltr"
    android:textDirection="ltr">


    <ImageView
        android:id="@+id/custom_loading_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:text="waiting..."
        android:textColor="@color/mellow_red"
        android:textDirection="ltr"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/custom_loading_imageView"
        app:layout_constraintEnd_toEndOf="@+id/custom_loading_imageView"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/custom_loading_imageView"
        app:layout_constraintTop_toTopOf="@+id/custom_loading_imageView"
        app:layout_constraintVertical_bias="0.07999998" />
</androidx.constraintlayout.widget.ConstraintLayout>