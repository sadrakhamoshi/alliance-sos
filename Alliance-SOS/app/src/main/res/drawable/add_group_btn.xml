<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="800dp" android:bottomRightRadius="800dp" android:topLeftRadius="800dp" android:topRightRadius="800dp" />
            <gradient android:angle="90" android:endColor="#971F1F" android:startColor="#9E6060" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="800dp" android:bottomRightRadius="800dp" android:topLeftRadius="800dp" android:topRightRadius="800dp" />
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>
</selector>
