<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="30dp" />
            <gradient android:angle="180" android:centerColor="#80AFA3A3" android:endColor="#3E0000" android:startColor="#33D8D8D8" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="30dp" />
            <solid android:color="#4DFFFFFF" />
        </shape>
    </item>
</selector>